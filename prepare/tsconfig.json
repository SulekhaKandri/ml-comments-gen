{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "removeComments": false,
    "declaration": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["es2018", "esnext.array"]
  }
}
